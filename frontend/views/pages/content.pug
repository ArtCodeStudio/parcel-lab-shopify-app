extends ../layouts/app.pug

block content
  .row
    .col-12
      h1.mb-5(rv-i18n-text="dataset.title | handleize | prepend 'titles.'")
  section.row.content
    .col-12
      .card.overview-card
        .card-body
          .card-text.px-3
            .row
              a.media.pt-3.col-12.col-md-6.col-xl-4(rv-route="'/view/content/blogs'")
                rv-icon.mr-3(src="/icons/jumplink-iconset_icon_pencil-edit.svg" size="40")
                .media-body
                  b.title(rv-i18n-text="'titles.content-blogs'")
                  p.description(rv-i18n-html="'overview.content_blogs_desc'")